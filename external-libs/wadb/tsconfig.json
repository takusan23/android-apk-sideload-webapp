{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "moduleResolution": "node",
    "lib": ["ES2015", "DOM"]
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs",
  },
  "include": ["src/**/*.ts"]
}
